{
    "name": "webpack-bundle",
    "version": "0.0.0-development",
    "private": true,
    "repository": "https://github.com/izatop/webpack-bundle",
    "author": {
        "name": "Artur Bier",
        "email": "izatop@gmail.com"
    },
    "workspaces": [
        "packages/webpack-bundle",
        "packages/webpack-bundle-react-spa"
    ],
    "scripts": {
        "publish": "lerna publish --conventional-commits --yes",
        "clean": "lerna run build:clean",
        "ci:coveralls": "cat ./coverage/lcov.info | yarn coveralls",
        "cs:check": "yarn run prettier -l './*.json' 'packages/*/{src,tests}/**/*.{ts}'",
        "cs:fix": "yarn run prettier --write './*.json' 'packages/*/{src,tests}/**/*.{ts}'",
        "lint": "yarn cs:fix && yarn tslint",
        "lint:fix": "yarn cs:fix && yarn tslint:fix",
        "tslint": "yarn tslint:check-config && yarn tslint:lint",
        "tslint:lint": "lerna run tslint:lint",
        "tslint:fix": "lerna run tslint:lint -- --fix",
        "tslint:check-config": "tslint-config-prettier-check ./tslint.json",
        "test": "yarn test:clean && jest --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --watch"
    },
    "jest": {
        "roots": [
            "<rootDir>/packages/webpack-bundle/test"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "/test[^/]*\\.tsx?$",
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "json",
            "js"
        ],
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.jest.json"
            }
        }
    },
    "prettier": {
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "arrowParens": "always",
        "printWidth": 120
    },
    "husky": {
        "hooks": {
            "pre-commit": "lerna run ci:build"
        }
    },
    "devDependencies": {
        "@types/jest": "^23.3.0",
        "coveralls": "^3.0.2",
        "husky": "^1.0.0-rc.13",
        "jest": "^23.4.1",
        "prettier": "^1.13.7",
        "rimraf": "^2.6.2",
        "ts-jest": "^23.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.14.0",
        "lerna": "^3.0.0-rc.0",
        "typescript": "^3.0.0-rc"
    },
    "license": "MIT"
}

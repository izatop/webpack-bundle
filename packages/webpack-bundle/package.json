{
    "name": "webpack-bundle",
    "version": "0.1.0",
    "repository": "https://github.com/izatop/webpack-bundle",
    "author": {
        "name": "Artur Bier",
        "email": "izatop@gmail.com"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "ci:build": "yarn clean && yarn lint && yarn test && yarn build",
        "ci:deploy": "yarn run semantic-release -e semantic-release-monorepo",
        "ci:coveralls": "cat ./coverage/lcov.info | yarn coveralls",
        "clean": "yarn build:clean; yarn test:clean",
        "cs:check": "yarn prettier -l './*.json' '{src,tests}/**/*.{ts,tsx}'",
        "cs:fix": "yarn prettier --write './*.json' '{src,tests}/**/*.{ts,tsx}'",
        "build": "yarn build:clean && tsc",
        "build:clean": "rimraf dist",
        "build:watch": "yarn build --watch",
        "lint": "yarn cs:fix && yarn tslint",
        "lint:fix": "yarn cs:fix && yarn tslint:fix",
        "tslint": "yarn tslint:check-config && yarn tslint:lint",
        "tslint:lint": "tslint '{src,tests}/**/*'",
        "tslint:fix": "yarn tslint:lint --fix",
        "tslint:check-config": "tslint-config-prettier-check ../../tslint.json",
        "test": "yarn test:clean && jest --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --watch"
    },
    "prettier": {
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "arrowParens": "always",
        "printWidth": 120
    },
    "jest": {
        "roots": [
            "<rootDir>/test"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "/test[^/]*\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "json",
            "js"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn ci:build"
        }
    },
    "dependencies": {
        "@sirian/ts-extra-types": "^1.1.1",
        "@types/webpack": "^4.4.6",
        "@types/webpack-dev-server": "^2.9.5",
        "webpack": "^4.16.2",
        "webpack-dev-server": "^3.1.5"
    },
    "peerDependencies": {
        "webpack": "^4.16.2",
        "webpack-dev-server": "^3.1.5"
    },
    "devDependencies": {
        "@types/jest": "^23.3.0",
        "coveralls": "^3.0.2",
        "husky": "^1.0.0-rc.13",
        "jest": "^23.4.1",
        "prettier": "^1.13.7",
        "rimraf": "^2.6.2",
        "ts-jest": "^23.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.14.0",
        "typescript": "^3.0.0-rc"
    },
    "license": "MIT"
}
